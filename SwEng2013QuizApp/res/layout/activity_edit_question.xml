<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".EditQuestionActivity" >

    <EditText
        android:id="@+id/edit_questionText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_question" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top" >
    </ListView>

    <Button
        android:id="@+id/add_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:onClick="addNewSlot"
        android:text="@string/plus_sign" />

    <EditText
        android:id="@+id/edit_tagsText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:hint="@string/edit_tags" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:enabled="false"
        android:onClick="submitQuestion"
        android:text="@string/submit_button" />

</LinearLayout>